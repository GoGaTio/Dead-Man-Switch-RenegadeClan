	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>DMSRC_AmmoSet_17x54mmFSR</defName>
		<label>17x54mm FSR</label>
		<ammoTypes>
			<DMSRC_Ammo_17x54mmFSR>DMSRC_Bullet_17x54mmFSR</DMSRC_Ammo_17x54mmFSR>
		</ammoTypes>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="17x54mmFSRBase" ParentName="AmmoBase">
		<defName>DMSRC_Ammo_17x54mmFSR</defName>
		<label>17x54mm FSR</label>
		<description>Advanced ammo used in mid range assault weapons.</description>
		<statBases>
			<Mass>0.01</Mass>
			<Bulk>0.01</Bulk>
			<MarketValue>1</MarketValue>
		</statBases>
		<thingCategories>
			<li>DMSRC_FSR</li>
		</thingCategories>
		<stackLimit>2000</stackLimit>
		<tradeTags>
			<li>CE_AutoEnableTrade_Sellable</li>
			<li>CE_AutoEnableCrafting_DMS_TableMachinePrinter </li>
		</tradeTags>
		<graphicData>
			<texPath>Things/Ammo/Charged/MediumMech</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>DMSRC_FSR</ammoClass>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base17x54mmFSRBullet" ParentName="BaseBulletCE">
		<defName>DMSRC_Bullet_17x54mmFSR</defName>
		<label>17x54mm FSR bullet</label>
		<graphicData>
			<texPath>Things/Projectile/Charged/ChargeShot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<thingClass>DMSRC.CE.Firecracker</thingClass>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<damageAmountBase>15</damageAmountBase>
			<speed>151</speed>
			<shadowSize>0.1</shadowSize>
			<explosionRadius>1.1</explosionRadius>
			<landedEffecter>DMSRC_SparkImpact</landedEffecter>
			<armorPenetrationSharp>17</armorPenetrationSharp>
			<armorPenetrationBlunt>25.6</armorPenetrationBlunt>
			<suppressionFactor>3.0</suppressionFactor>
			<dangerFactor>2.0</dangerFactor>
		</projectile>
		<comps>
			<li Class="CompProperties_ProjectileEffecter">
				<effecterDef>DMSRC_SparkStream</effecterDef>
			</li>
		</comps>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="AmmoRecipeBase">
		<defName>DMSRC_MakeAmmo_17x54mmFSR</defName>
		<label>make 17x54mm FSR cartridge x500</label>
		<description>Craft 500 17x54mm FSR cartridges.</description>
		<jobString>Making 17x54mm FSR cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Tungsteel</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>DMS_Ceramics</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>FSX</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentStamped</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Tungsteel</li>
				<li>DMS_Ceramics</li>
				<li>FSX</li>
				<li>ComponentStamped</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<DMSRC_Ammo_17x54mmFSR>500</DMSRC_Ammo_17x54mmFSR>
		</products>
		<workAmount>6500</workAmount><!-- 10% more work -->
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
		<researchPrerequisite>DMSRC_Firecrackers</researchPrerequisite>
	</RecipeDef>

</Defs>