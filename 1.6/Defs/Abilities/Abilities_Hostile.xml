<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AbilityDef>
    <defName>DMSRC_SZFLauncher</defName>
    <label>launch SZF-57 rocket</label>
    <description>Launch SZF-57 rocket.</description>
    <iconPath>UI/Abilities/DMSRC_UnderBarrelGrenadeLauncher</iconPath>
    <aiCanUse>true</aiCanUse>
    <showOnCharacterCard>false</showOnCharacterCard>
    <charges>1</charges>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <requireLineOfSight>false</requireLineOfSight>
      <range>99.9</range>
      <warmupTime>2.7</warmupTime>
      <defaultCooldownTime>1</defaultCooldownTime>
      <minRange>6.9</minRange>
      <soundCast>Shot_IncendiaryLauncher</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="DMSRC.CompProperties_AbilityProjectileWithMissRadius">
        <projectileDef>DMSRC_Bullet_SZF</projectileDef>
        <forcedMissRadius>4.7</forcedMissRadius>
        <preventLaunchUnderRoof>true</preventLaunchUnderRoof>
      </li>
      <li Class="DMSRC.CompProperties_AbilityNotify" />
    </comps>
  </AbilityDef>

  <AbilityDef>
    <defName>DMSRC_RocketLauncher_Direct</defName>
    <label>rocket launcher</label>
    <description>Launch frag grenade using underbarrel grenade launcher.</description>
    <iconPath>UI/Abilities/DMSRC_UnderBarrelGrenadeLauncher</iconPath>
    <aiCanUse>true</aiCanUse>
    <showOnCharacterCard>false</showOnCharacterCard>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <requireLineOfSight>true</requireLineOfSight>
      <range>39.9</range>
      <warmupTime>2.3</warmupTime>
      <defaultCooldownTime>1</defaultCooldownTime>
      <soundCast>Shot_IncendiaryLauncher</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="DMSRC.CompProperties_AbilityProjectileWithMissRadius">
        <projectileDef>DMSRC_Rocket_Direct</projectileDef>
        <forcedMissRadius>3.7</forcedMissRadius>
      </li>
    </comps>
  </AbilityDef>

</Defs>
