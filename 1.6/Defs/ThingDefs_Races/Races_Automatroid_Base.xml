<?xml version="1.0" encoding="utf-8"?>
<Defs>


  <!-- Base -->
  <ThingDef Name="DMSRC_BasePersonaAutomatroid" ParentName="BaseMechanoid" Abstract="True">
    <thingClass>DMSRC.OverseerMech</thingClass>
    <statBases>
      <MoveSpeed>4.7</MoveSpeed>
      <ArmorRating_Blunt>0.10</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.20</ArmorRating_Sharp>
      <StaggerDurationFactor>0.5</StaggerDurationFactor>
      <BandwidthCost>1</BandwidthCost>
      <ControlTakingTime>5</ControlTakingTime>
      <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
      <MechEnergyLossPerHP>0.08</MechEnergyLossPerHP>
      <WastepacksPerRecharge>1</WastepacksPerRecharge>
      <WorkSpeedGlobal>0.8</WorkSpeedGlobal>
      <PsychicSensitivity>0</PsychicSensitivity>
    </statBases>
    <race>
      <specialShadowData>
        <volume>(0.3, 0.8, 0.4)</volume>
        <offset>(0,0,-0.3)</offset>
      </specialShadowData>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>DMS_Mechanoid</thinkTreeMain>
      <nameGenerator>DMSRC_MechPersona</nameGenerator>
      <soundCallIntervalRange>1000~2000</soundCallIntervalRange>
      <soundCallIntervalFriendlyFactor>2</soundCallIntervalFriendlyFactor>
      <thinkTreeConstant MayRequire="Ludeon.RimWorld.Biotech">MechConstant</thinkTreeConstant>
      <soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
      <mechFixedSkillLevel>8</mechFixedSkillLevel>
      <lifeStageAges>
        <li>
          <def>DMS_Automatroid_BrandNew</def>
          <minAge>0</minAge>
          <soundWounded>Pawn_Mech_Cleansweeper_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Cleansweeper_Death</soundDeath>
          <soundCall>Pawn_Mech_Cleansweeper_Call</soundCall>
        </li>
        <li>
          <def>DMS_Automatroid_Damaged</def>
          <minAge>70</minAge>
          <soundWounded>Pawn_Mech_Cleansweeper_Wounded</soundWounded>
          <soundDeath>Pawn_Mech_Cleansweeper_Death</soundDeath>
          <soundCall>Pawn_Mech_Cleansweeper_Call</soundCall>
        </li>
      </lifeStageAges>
    </race>
    <butcherProducts>
      <Steel>10</Steel>
    </butcherProducts>
    <tools>
      <li>
        <label>head</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.6</cooldownTime>
        <linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
        <ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
      </li>
    </tools>
    <damageMultipliers>
      <li>
        <damageDef>EMP</damageDef>
        <multiplier>0.2</multiplier>
      </li>
      <li>
        <damageDef>Stun</damageDef>
        <multiplier>0.1</multiplier>
      </li>
      <li>
        <damageDef>MechBandShockwave</damageDef>
        <multiplier>0</multiplier>
      </li>
      <li MayRequire="CETeam.CombatExtended">
        <damageDef>Electrical</damageDef>
        <multiplier>0.2</multiplier>
      </li>
    </damageMultipliers>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BasePersonaAutomatroid" Name="DMSRC_BasePersonaHumanoid" Abstract="True">
    <race>
      <thinkTreeMain>DMS_Mechanoid</thinkTreeMain>
      <baseBodySize>1.0</baseBodySize>
      <mechEnabledWorkTypes>
        <li>BasicWorker</li>
      </mechEnabledWorkTypes>
      <detritusLeavings>
        <li>
          <def>DMS_ChunkSlag</def>
          <texOverrideIndex>5</texOverrideIndex>
          <spawnChance>0.3</spawnChance>
        </li>
        <li>
          <def>DMS_ChunkSlag</def>
          <spawnChance>0.2</spawnChance>
        </li>
        <li>
          <def>DMS_ChunkSlag</def>
          <spawnChance>0.2</spawnChance>
        </li>
      </detritusLeavings>
    </race>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12.0</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
        <alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
      </li>
    </tools>
  </ThingDef>


