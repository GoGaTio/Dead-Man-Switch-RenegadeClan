<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <PawnKindDef ParentName="DMSRC_RenegadeBase" Name="DMSRC_Renegade">
    <defName>DMSRC_Renegade</defName>
    <label>renegade</label>
    <combatPower>30</combatPower>
    <apparelAllowHeadgearChance>0</apparelAllowHeadgearChance>
    <apparelMoney>700~1000</apparelMoney>
    <weaponTags>
      <li>A_Pistol</li>
    </weaponTags>
    <weaponMoney>300~700</weaponMoney>
  </PawnKindDef>

  <PawnKindDef ParentName="DMSRC_Renegade">
