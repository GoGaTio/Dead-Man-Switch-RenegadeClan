<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="BuildingBase" Name="DMSRC_BaseLootBox" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <pathCost>120</pathCost>
    <passability>PassThroughOnly</passability>
    <thingClass>Fortified.Building_SurplusContainer</thingClass>
    <rotatable>true</rotatable>
    <useHitPoints>true</useHitPoints>
    <destroyable>true</destroyable>
    <statBases>
      <MaxHitPoints>1000</MaxHitPoints>
      <WorkToBuild>1500</WorkToBuild>
    </statBases>
    <building>
      <expandHomeArea>false</expandHomeArea>
      <claimable>true</claimable>
      <repairable>true</repairable>
      <deconstructible>true</deconstructible>
      <neverBuildable>true</neverBuildable>
      <paintable>true</paintable>
    </building>
    <pathCost>45</pathCost>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseLootBox">
    <defName>DMSRC_Cargo</defName>
    <label>cargo container</label>
    <description>A standard issue container containing military supplies.</description>
    <rotatable>true</rotatable>
    <tickerType>Normal</tickerType>
    <building>
      <paintable>true</paintable>
    </building>
    <graphicData>
      <color>(0.5,0.5,0.5)</color>
      <texPath>Things/Building/cargo</texPath>
      <drawSize>(4.3,6.45)</drawSize>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <fillPercent>1</fillPercent>
    <killedLeavingsRanges>
      <ChunkSlagSteel>2~4</ChunkSlagSteel>
    </killedLeavingsRanges>
    <staticSunShadowHeight>0.7</staticSunShadowHeight>
    <size>(2,4)</size>
    <defaultPlacingRot>0</defaultPlacingRot>
    <modExtensions>
      <li Class="Fortified.ModExtension_Lootbox">
        <sound>CrateOpeningStarted</sound>
        <openedGraphicdata>
          <texPath>Things/Building/cargoOpen</texPath>
          <drawSize>(4.3,6.45)</drawSize>
          <graphicClass>Graphic_Random</graphicClass>
          <shaderType>CutoutComplex</shaderType>
        </openedGraphicdata>
        <countRange>2~4</countRange>
        <loots>
          <li>DMSRC_PackLoots</li>
          <li>DMSAC_RTC_CompLoots</li>
        </loots>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseLootBox">
    <defName>DMSRC_Crate</defName>
    <label>military crate</label>
    <description>A standard issue equipment crate containing military supplies.</description>
    <rotatable>true</rotatable>
    <graphicData>
      <texPath>Things/Building/Crate/crate</texPath>
      <drawSize>(3,2)</drawSize>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>Cutout</shaderType>
    </graphicData>
    <fillPercent>0.4</fillPercent>
    <costList>
      <WoodLog>20</WoodLog>
    </costList>
    <staticSunShadowHeight>0.2</staticSunShadowHeight>
    <size>(2,1)</size>
    <defaultPlacingRot>2</defaultPlacingRot>
    <modExtensions>
      <li Class="Fortified.ModExtension_Lootbox">
        <sound>CrateOpeningStarted</sound>
        <openedGraphicdata>
          <texPath>Things/Building/Crate/crateOpen</texPath>
          <drawSize>(3,2)</drawSize>
          <graphicClass>Graphic_Random</graphicClass>
          <shaderType>Cutout</shaderType>
        </openedGraphicdata>
        <loots>
          <li>DMSRC_Crate</li>
        </loots>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseLootBox">
    <defName>DMSRC_PackCrate</defName>
    <label>military parcel</label>
    <description>A standard issue parcel containing supplies for military logistics.</description>
    <rotatable>false</rotatable>
    <graphicData>
      <texPath>Things/Building/Containers/DMSRC_PackCrate</texPath>
      <drawSize>(3,3)</drawSize>
      <graphicClass>Graphic_Random</graphicClass>
      <shadowData>
        <offset>(0,0,0)</offset>
        <volume>(2,0.8,2)</volume>
      </shadowData>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <costList>
      <Cloth>40</Cloth>
    </costList>
    <size>(2,2)</size>
    <defaultPlacingRot>0</defaultPlacingRot>
    <modExtensions>
      <li Class="Fortified.ModExtension_Lootbox">
        <sound>CrateOpeningStarted</sound>
        <openedGraphicdata>
          <texPath>Things/Building/Containers/DMSRC_PackCrate_Open</texPath>
          <drawSize>(3,3)</drawSize>
          <graphicClass>Graphic_Random</graphicClass>
          <shadowData>
            <volume>(2,0.25,2)</volume>
          </shadowData>
        </openedGraphicdata>
        <loots>
          <li>DMSRC_PackLoots</li>
        </loots>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseLootBox">
    <defName>DMSRC_Drawer</defName>
    <label>drawer</label>
    <description>A standard issue parcel containing supplies for military logistics. These parcel seemed to have been produced recently and sent to various locations.</description>
    <rotatable>true</rotatable>
    <graphicData>
      <texPath>Things/Building/Containers/DMSRC_PackCrate</texPath>
      <drawSize>(1,1)</drawSize>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <costList>
      <Steel>30</Steel>
    </costList>
    <size>(1,1)</size>
    <defaultPlacingRot>0</defaultPlacingRot>
    <comps>
      <li Class="Fortified.CompProperties_RandomColorOnSpawn">
        <colorChance>1</colorChance>
        <colorDefs>
          <li>Structure_GreenFaded</li>
          <li>Structure_OrangePastel</li>
          <li>Structure_Red</li>
          <li>Structure_White</li>
        </colorDefs>
      </li>
    </comps>
    <modExtensions>
      <li Class="Fortified.ModExtension_Lootbox">
        <sound>CrateOpeningStarted</sound>
        <openedGraphicdata>
          <texPath>Things/Building/Containers/DMSRC_PackCrate_Open</texPath>
          <drawSize>(1,1)</drawSize>
          <graphicClass>Graphic_Multi</graphicClass>
          <shaderType>CutoutComplex</shaderType>
        </openedGraphicdata>
        <countRange>1</countRange>
        <loots>
          <li>DMSRC_Drawer</li>
        </loots>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseLootBox">
    <defName>DMSRC_Locker</defName>
    <label>locker</label>
    <description>A standard issue parcel containing supplies for military logistics. These parcel seemed to have been produced recently and sent to various locations.</description>
    <rotatable>true</rotatable>
    <building>
      <paintable>false</paintable>
    </building>
    <graphicData>
      <texPath>Things/Building/Containers/DMSRC_Locker</texPath>
      <drawSize>(2,2)</drawSize>
      <graphicClass>Graphic_Multi</graphicClass>
    </graphicData>
    <fillPercent>0.5</fillPercent>
    <costList>
      <Steel>40</Steel>
    </costList>
    <size>(1,1)</size>
    <defaultPlacingRot>0</defaultPlacingRot>
    <modExtensions>
      <li Class="Fortified.ModExtension_Lootbox">
        <sound>CrateOpeningStarted</sound>
        <openedGraphicdata>
          <texPath>Things/Building/Containers/DMSRC_Locker_Open</texPath>
          <drawSize>(2,2)</drawSize>
          <graphicClass>Graphic_Multi</graphicClass>
        </openedGraphicdata>
        <countRange>1~2</countRange>
        <loots>
          <li>DMSRC_Locker</li>
        </loots>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>