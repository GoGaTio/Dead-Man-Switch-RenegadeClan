<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Abstract="True" Name ="DMSRC_BaseAssaultHelmet" ParentName="ApparelBase">
    <thingCategories>
      <li>Headgear</li>
    </thingCategories>
    <thingSetMakerTags>
      <li>DMSRC_AssaultEquipment</li>
    </thingSetMakerTags>
<tradeTags><li>DMSRC_AssaultEquipment</li></tradeTags>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisites>
        <li>DMSRC_AssaultEquipment</li>
      </researchPrerequisites>
      <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <effectWorking>Smith</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>DMS_TableMachinePrinter</li>
      </recipeUsers>
      <defaultIngredientFilter>
        <disallowedThingDefs>
          <li>Silver</li>
          <li>Gold</li>
        </disallowedThingDefs>
      </defaultIngredientFilter>
      <displayPriority>205</displayPriority>
    </recipeMaker>
    <graphicData>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1, 1)</drawSize>
    </graphicData>
    <equippedStatOffsets>
      <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.15</SlaveSuppressionOffset>
      <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.65</VacuumResistance>
      <ToxicEnvironmentResistance>0.75</ToxicEnvironmentResistance>
      <ShootingAccuracyPawn>1.5</ShootingAccuracyPawn>
    </equippedStatOffsets>
    <uiIconScale>1.25</uiIconScale>
    <generateCommonality>1</generateCommonality>
    <stuffCategories Inherit="False">
      <li>Metallic</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>250</MaxHitPoints>
      <Mass>3</Mass>
      <Flammability>0</Flammability>
      <StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>0</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>0</StuffEffectMultiplierInsulation_Heat>
      <Insulation_Cold>10</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <apparel>
      <countsAsClothingForNudity>true</countsAsClothingForNudity>
      <parentTagDef>ApparelHead</parentTagDef>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>DMSRC_Assault</li>
      </tags>
      <canBeDesiredForIdeo>false</canBeDesiredForIdeo>
      <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
      <canBeGeneratedToSatisfyToxicEnvironmentResistance>false</canBeGeneratedToSatisfyToxicEnvironmentResistance>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
    </apparel>
    <comps>
      <li Class="CompProperties_Biocodable"/>
    </comps>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>15</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseAssaultHelmet">
    <defName>DMSRC_Apparel_AssaultHelmet</defName>
    <label>heavy assault helmet</label>
    <description>A heavy helmet designed to protect wearer from bullets and shrapnel during direct assault operations./n/nAlso provides toxic gas and vacuum exposure resistances, along with increased shooting accuracy.</description>
    <costList>
      <Tungsteel>20</Tungsteel>
      <Plasfiber>20</Plasfiber>
      <ComponentStamped>2</ComponentStamped>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <costStuffCount>60</costStuffCount>
    <graphicData>
      <texPath>Things/Apparel/DMSRC_HeavyAssaultHelmet/DMSRC_HeavyAssaultHelmet_south</texPath>
    </graphicData>
    <generateCommonality>1</generateCommonality>
    <statBases>
      <WorkToMake>20000</WorkToMake>
      <StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
    </statBases>
    <apparel>
      <wornGraphicPath>Things/Apparel/DMSRC_HeavyAssaultHelmet/DMSRC_HeavyAssaultHelmet</wornGraphicPath>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseAssaultHelmet">
    <defName>DMSRC_Apparel_ShieldHelmet</defName>
    <label>shield assault helmet</label>
    <description>A heavy helmet designed to protect wearer from bullets and shrapnel during direct assault operations. Built-in shield projector covers wearer from incoming projectiles./n/nAlso provides toxic gas and vacuum exposure resistances, along with increased shooting accuracy.</description>
    <costList>
      <Tungsteel>30</Tungsteel>
      <Plasfiber>20</Plasfiber>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentStamped>3</ComponentStamped>
      <ComponentSpacer>2</ComponentSpacer>
    </costList>
    <costStuffCount>50</costStuffCount>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Apparel/DMSRC_ShieldAssaultHelmet/DMSRC_ShieldAssaultHelmet_south</texPath>
      <shaderType>CutoutComplex</shaderType>
      <maskPath>Things/Apparel/DMSRC_ShieldAssaultHelmet/DMSRC_ShieldAssaultHelmet_southm</maskPath>
    </graphicData>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>23000</WorkToMake>
      <Mass>3.5</Mass>
      <MaxHitPoints>150</MaxHitPoints>
      <StuffEffectMultiplierArmor>0.9</StuffEffectMultiplierArmor>
      <EnergyShieldRechargeRate>0.13</EnergyShieldRechargeRate>
      <EnergyShieldEnergyMax>1.1</EnergyShieldEnergyMax>
    </statBases>
    <apparel>
      <wornGraphicPath>Things/Apparel/DMSRC_ShieldAssaultHelmet/DMSRC_ShieldAssaultHelmet</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask><tags>
        <li>DMSRC_ShieldHelmet</li>
      </tags>
    </apparel>
    <comps>
      <li Class="CompProperties_Shield">
        <startingTicksToReset>2500</startingTicksToReset>
        <minDrawSize>2</minDrawSize>
        <maxDrawSize>2.5</maxDrawSize>
        <energyLossPerDamage>0.01</energyLossPerDamage>
        <energyOnReset>1</energyOnReset>
        <blocksRangedWeapons>false</blocksRangedWeapons>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="DMSRC_BaseAssaultHelmet">
    <defName>DMSRC_Apparel_ProcessorHelmet</defName>
    <label>processor helmet</label>
    <description>An advanced helmet with built-in processor core, that allows to use more neuroimplants and control more mechs./n/nAlso provides toxic gas and vacuum exposure resistances, along with increased shooting accuracy.</description>
    <costList>
      <Tungsteel>30</Tungsteel>
      <Plasfiber>25</Plasfiber>
      <ComponentIndustrial>4</ComponentIndustrial>
      <ComponentStamped>4</ComponentStamped>
      <ComponentSpacer>1</ComponentSpacer>
      <DMSRC_ProcessorCore>1</DMSRC_ProcessorCore>
    </costList>
    <costStuffCount>70</costStuffCount>
    <recipeMaker>
      <researchPrerequisites>
        <li>DMSRC_NeuroChips</li>
      </researchPrerequisites>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/DMSRC_ProcessorHelmet/DMSRC_ProcessorHelmet_south</texPath>
    </graphicData>
    <generateCommonality>0.5</generateCommonality>
    <statBases>
      <WorkToMake>25000</WorkToMake>
      <Mass>3.5</Mass>
      <StuffEffectMultiplierArmor>1.2</StuffEffectMultiplierArmor>
    </statBases>
    <thingSetMakerTags Inherit="False" /><tradeTags Inherit="False" />
    <apparel>
      <wornGraphicPath>Things/Apparel/DMSRC_ProcessorHelmet/DMSRC_ProcessorHelmet</wornGraphicPath>
      <tags>
        <li>DMSRC_Thinker</li>
      </tags>
    </apparel>
    <comps>
      <li Class="DMSRC.CompProperties_ProcessorHelmet">
        <hediff>DMSRC_ProcessorHelmet</hediff>
      </li>
    </comps>
  </ThingDef>

</Defs>