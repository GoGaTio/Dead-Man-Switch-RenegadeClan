<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DMS_AutomatroidHeavyGun">
    <defName>DMSRC_FSRMachineGun</defName>
    <label>FSR Heavy repeater</label>
    <description>An easily mass produced assault rifle designed for mech soldiers equipped with an extra long picatinny rail for all tacticool needs.\n\nThis version has underbarrel grenade launcher, that allows to launch frag grenade once before reloading.\n\nThis weapon is specially designed for automatroid use, normal humans will struggle to use it without external equipment or augmentations.</description>
    <weaponClasses>
      <li>RangedHeavy</li>
      <li>Ranged</li>
    </weaponClasses>
    <weaponTags>
      <li>DMSRC_HeavyFSR</li>
      <li>DMS_DragoonGun</li>
      <li>DMS_MechWeaponHeavy</li>
      <li>A_SuppressWeaponHeavy</li>
      <li>DMS_VehicleWeapon</li>
    </weaponTags>
    <generateCommonality>0.3</generateCommonality>
    <graphicData>
      <texPath>Things/Weapons/DMSRC_FSRMG</texPath>
      <drawSize>2.25</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisites>
        <li>DMSRC_FSRMunitions</li>
      </researchPrerequisites>
    </recipeMaker>
    <costList>
      <Tungsteel>85</Tungsteel>
      <ComponentStamped>7</ComponentStamped>
      <ComponentSpacer>2</ComponentSpacer>
      <DMS_Ceramics>45</DMS_Ceramics>
    </costList>
    <statBases>
      <WorkToMake>85000</WorkToMake>
      <Mass>5.75</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.25</AccuracyMedium>
      <AccuracyLong>0.10</AccuracyLong>
      <RangedWeapon_Cooldown>2.4</RangedWeapon_Cooldown>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DMSRC_Bullet_FSR</defaultProjectile>
        <warmupTime>2.3</warmupTime>
        <range>39.9</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>12</ticksBetweenBurstShots>
        <soundCast>DMSRC_Shot_FSR</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <modExtensions>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>HeavyAutomatroid</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="DMS_AutomatroidHeavyGun">
    <defName>DMSRC_Gun_Linza</defName>
    <label>GL-9 "Linza"</label>
    <description>A high-energy gamma ray laser which fires a sweeping beam that pierces thick armor and burns targets.\n\nOrganic creatures which are damaged by beam may develop beam illness, that leads to chronic diseases and death if dose is high enough.</description>
    <relicChance>0</relicChance>
    <graphicData>
      <texPath>Things/Weapons/DMSRC_BeamGun_Linza</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2</drawSize>
    </graphicData>
    <weaponClasses>
      <li>RangedHeavy</li>
      <li>Ranged</li>
    </weaponClasses>
    <weaponTags>
      <li>DMSRC_HeavyBeamCannon</li>
      <li>DMS_MechWeaponUltraHeavy</li>
      <li>NoSwitch</li>
    </weaponTags>
    <generateCommonality>0.3</generateCommonality>
    <statBases>
      <Mass>30</Mass>
      <AccuracyTouch>0.75</AccuracyTouch>
      <AccuracyShort>1</AccuracyShort>
      <AccuracyMedium>0.95</AccuracyMedium>
      <AccuracyLong>0.9</AccuracyLong>
      <RangedWeapon_Cooldown>1.7</RangedWeapon_Cooldown>
      <MarketValue>5000</MarketValue>
    </statBases>
    <recipeMaker>
      <researchPrerequisites Inherit="False">
        <li>DMS_Synthroid</li>
        <li>DMS_EquipmentHeavy</li>
        <li>DMSRC_BeamFocusing</li>
      </researchPrerequisites>
    </recipeMaker>
    <costList>
      <Tungsteel>70</Tungsteel>
      <DMS_Ceramics>100</DMS_Ceramics>
      <Plasfiber>100</Plasfiber>
      <ComponentStamped>6</ComponentStamped>
      <ComponentSpacer>3</ComponentSpacer>
      <DMSRC_ComponentGBEP>3</DMSRC_ComponentGBEP>
      <ComponentFireControl>1</ComponentFireControl>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
    </equippedStatOffsets>
    <verbs>
      <li>
        <verbClass>DMSRC.Verb_FocusedBeam</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>2.3</warmupTime>
        <showBurstShotStats>false</showBurstShotStats>
        <range>41.9</range>
        <minRange>2.4</minRange>
        <beamFullWidthRange>7.9</beamFullWidthRange>
        <burstShotCount>30</burstShotCount>
        <beamWidth>5</beamWidth>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <beamDamageDef>DMSRC_FocusedBeam</beamDamageDef>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundCastBeam>BeamGraser_Shooting</soundCastBeam>
        <beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
        <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
        <beamMaxDeviation>1.5</beamMaxDeviation>
        <beamCurvature>0.6</beamCurvature>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <beamEndEffecterDef>DMSRC_FocusedBeam_End</beamEndEffecterDef>
        <beamChanceToStartFire>0.85</beamChanceToStartFire>
        <beamChanceToAttachFire>0.85</beamChanceToAttachFire>
        <beamFireSizeRange>0.55~0.85</beamFireSizeRange>
        <beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
        <beamStartOffset>0.5</beamStartOffset>
        <beamLineFleckChanceCurve>
          <points>
            <li>(0, 0)</li>
            <li>(0.65, 0.4)</li>
            <li>(1, 0.75)</li>
          </points>
        </beamLineFleckChanceCurve>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>emitter</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="DMSRC.CompProperties_FocusedBeam">
        <explosionDamage>9</explosionDamage>
        <explosionRange>1.9</explosionRange>
        <beamMoteDef>DMSRC_Mote_BeamLarge</beamMoteDef>
        <damageDef>DMSRC_FocusedBeam</damageDef>
      </li>
    </comps>
    <modExtensions>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>UltraHeavyAutomatroid</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
