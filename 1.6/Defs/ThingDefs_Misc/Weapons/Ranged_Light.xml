<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DMS_AutomatroidGun">
    <defName>DMSRC_FSRPistol</defName>
    <label>FSR Light carabine</label>
    <description>A stub-barreled mech carabine. Reinforced barrel and complex breech-mechanism allows to use FSR ammo.</description>
    <weaponClasses>
      <li>RangedLight</li>
      <li>Ranged</li>
    </weaponClasses>
    <weaponTags>
      <li>DMSRC_LightFSR</li>
      <li>DMS_MechWeaponLight</li>
    </weaponTags>
    <graphicData>
      <texPath>Things/Weapons/DMSRC_FSRPistol</texPath>
      <drawSize>1.5</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>29000</WorkToMake>
      <Mass>3.2</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.63</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisites>
        <li>DMSRC_FSRMunitions</li>
      </researchPrerequisites>
    </recipeMaker>
    <costList>
      <Tungsteel>35</Tungsteel>
      <ComponentStamped>1</ComponentStamped>
<ComponentSpacer>1</ComponentSpacer>
      <DMS_Ceramics>15</DMS_Ceramics>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DMSRC_Bullet_FSR</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>21.9</range>
        <burstShotCount>1</burstShotCount>
        <!--<ticksBetweenBurstShots>12</ticksBetweenBurstShots>-->
        <soundCast>DMSRC_Shot_FSR</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <modExtensions>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>AverageHumanCanUse</EquippableDef>
      </li>
    </modExtensions>
    <tools Inherit="False">
			<li>
				<label>grip</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>barrel</label>
				<capacities>
					<li>Blunt</li>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
		</tools>
  </ThingDef>

</Defs>
