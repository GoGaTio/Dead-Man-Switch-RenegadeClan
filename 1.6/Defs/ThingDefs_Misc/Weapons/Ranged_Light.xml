<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="DMS_AutomatroidGun">
    <defName>DMSRC_FSRPistol</defName>
    <label>FSR Light carabine</label>
    <description>An easily mass produced assault rifle designed for mech soldiers equipped with an extra long picatinny rail for all tacticool needs.\n\nThis version has underbarrel grenade launcher, that allows to launch frag grenade once before reloading.\n\nThis weapon is specially designed for automatroid use, normal humans will struggle to use it without external equipment or augmentations.</description>
    <weaponClasses>
      <li>RangedLight</li>
      <li>Ranged</li>
    </weaponClasses>
    <weaponTags>
      <li>DMSRC_LightFSR</li>
      <li>DMS_MechWeaponLight</li>
    </weaponTags>
    <graphicData>
      <texPath>Things/Weapons/DMSRC_FSRPistol</texPath>
      <drawSize>1.5</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <statBases>
      <WorkToMake>45000</WorkToMake>
      <Mass>5.75</Mass>
      <AccuracyTouch>0.65</AccuracyTouch>
      <AccuracyShort>0.70</AccuracyShort>
      <AccuracyMedium>0.68</AccuracyMedium>
      <AccuracyLong>0.63</AccuracyLong>
      <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
    </statBases>
    <recipeMaker>
      <researchPrerequisites>
        <li>DMSRC_FSRMunitions</li>
      </researchPrerequisites>
    </recipeMaker>
    <costList>
      <Tungsteel>75</Tungsteel>
      <ComponentStamped>5</ComponentStamped>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>DMSRC_Bullet_FSR</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>21.9</range>
        <burstShotCount>1</burstShotCount>
        <!--<ticksBetweenBurstShots>12</ticksBetweenBurstShots>-->
        <soundCast>DMSRC_Shot_FSR</soundCast>
        <soundCastTail>GunTail_Light</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <modExtensions>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>AverageHumanCanUse</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

</Defs>
