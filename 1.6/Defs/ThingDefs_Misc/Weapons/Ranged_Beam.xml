  <ThingDef ParentName="DMS_AutomatroidGun">
    <defName>DMSRC_Gun_Luch</defName>
    <label>GL-5 "Luch"</label>
    <description>A high-energy gamma laser which fires a sweeping beam that pierces thick armor and burns targets.\n\nOrganic creatures which are damaged by beam may develop beam illness, that leads to chronic diseases and death if dose is high enough.</description>
    <graphicData>
      <texPath>Things/Weapons/DMSRC_BeamGun_Luch</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>2</drawSize>
    </graphicData>
    <statBases>
      <Mass>7.6</Mass>
      <AccuracyTouch>1</AccuracyTouch>
      <AccuracyShort>0.5</AccuracyShort>
      <AccuracyMedium>0.4</AccuracyMedium>
      <AccuracyLong>0.1</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
      <WorkToMake>57000</WorkToMake>
    </statBases>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisites>
        <li>DMS_EquipmentElite</li>
        <li>DMSRC_BeamFocusing</li>
      </researchPrerequisites>
    </recipeMaker>
    <costList>
      <Tungsteel>90</Tungsteel>
      <DMS_Ceramics>25</DMS_Ceramics>
      <Plasfiber>30</Plasfiber>
      <ComponentStamped>4</ComponentStamped>
      <ComponentSpacer>2</ComponentSpacer>
      <DMSRC_ComponentGBEP>1</DMSRC_ComponentGBEP>
    </costList>
    <equippedStatOffsets>
      <MoveSpeed>-0.15</MoveSpeed>
    </equippedStatOffsets>
    <generateCommonality>0.17</generateCommonality>
    <verbs>
      <li>
        <verbClass>DMSRC.Verb_FocusedBeam</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>2.3</warmupTime>
        <range>34.9</range>
        <minRange>1.9</minRange>
        <beamFullWidthRange>5.9</beamFullWidthRange>
        <burstShotCount>20</burstShotCount>
        <beamWidth>3</beamWidth>
        <showBurstShotStats>false</showBurstShotStats>
        <ticksBetweenBurstShots>2</ticksBetweenBurstShots>
        <beamDamageDef>DMSRC_FocusedBeam</beamDamageDef>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
        <soundCastBeam>BeamGraser_Shooting</soundCastBeam>
        <beamGroundFleckDef>Fleck_BeamBurn</beamGroundFleckDef>
        <beamFleckChancePerTick>0.32</beamFleckChancePerTick>
        <beamMaxDeviation>1.5</beamMaxDeviation>
        <beamCurvature>0.6</beamCurvature>
        <stopBurstWithoutLos>false</stopBurstWithoutLos>
        <requireLineOfSight>false</requireLineOfSight>
        <beamEndEffecterDef>DMSRC_FocusedBeam_End</beamEndEffecterDef>
        <beamChanceToStartFire>0.85</beamChanceToStartFire>
        <beamChanceToAttachFire>0.85</beamChanceToAttachFire>
        <beamFireSizeRange>0.55~0.85</beamFireSizeRange>
        <beamLineFleckDef>Fleck_BeamSpark</beamLineFleckDef>
        <beamStartOffset>0.75</beamStartOffset>
        <beamLineFleckChanceCurve>
          <points>
            <li>(0, 0)</li>
            <li>(0.65, 0.4)</li>
            <li>(1, 0.75)</li>
          </points>
        </beamLineFleckChanceCurve>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <weaponTags>
      <li>DMSRC_BeamGraserGun</li>
      <li>A_AR_LongRifle</li>
      <li>DMS_MechWeaponMedium</li>
      <li>NoSwitch</li>
    </weaponTags>
    <tools Inherit="False">
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>emitter</label>
      <capacities>
        <li>Blunt</li>
        <li>Poke</li>
      </capacities>
      <power>12</power>
      <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li Class="DMSRC.CompProperties_FocusedBeam">
        <explosionDamage>3</explosionDamage>
        <explosionRange>1.1</explosionRange>
        <beamMoteDef>DMSRC_Mote_Beam</beamMoteDef>
        <damageDef>DMSRC_FocusedBeam</damageDef>
      </li>
    </comps>
    <modExtensions>
      <li Class="Fortified.HeavyEquippableExtension">
        <EquippableDef>LightAutomatroid</EquippableDef>
      </li>
    </modExtensions>
  </ThingDef>

